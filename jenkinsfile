pipeline {
    agent any


    triggers {
         pollSCM('* * * * *') // Polling Source Control
             }
     
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package' 
                  }
                post {
                  success
                  {
                    echo 'Now Archiving...'
                          archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
       
        stage('Deploy to Staging') {
             steps {
                      
                        sh 'sudo scp -i /var/lib/jenkins/dileep.pem ./target/*.war ec2-user@52.91.110.184:/opt/apache-tomcat-7.0.53/webapps'
                   }
               }
           }
        }
